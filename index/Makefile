# Indexer make file

CC=gcc
CFLAGS1=-Wall -g
CFLAGS=-g -Wall -pedantic -std=c99 -ggdb
SOURCES=./indexer.c ./indexer.h
CFILES=./indexer.c

UTILDIR=../util/
UTILFLAG=-ltseutil
UTILLIB=$(UTILDIR)libtseutil.a
UTILC=$(UTILDIR)hash.c $(UTILDIR)html.c $(UTILDIR)file.c $(UTILDIR)dictionary.c
UTILH=$(UTILC:.c=.h)

indexer:	$(SOURCES) $(UTILDIR)header.h $(UTILLIB)
			$(CC) $(CFLAGS) -o indexer $(CFILES) -L$(UTILDIR) $(UTILFLAG)

$(UTILLIB): $(UTILC) $(UTILH)
			cd $(UTILDIR); make;

clean:
			rm -f *~
			rm -f indexer
			rm -f *.o
			rm -f core*
			rm -f ../util/*~
			rm -f ../crawler/data/core*
			rm -f ../crawler/data/index.dat
			rm -f valout
			rm -f ../util/libtseutil.a
